<%= link_to "New Article", new_article_path, class: 'btn btn-secondary' %>
<br/><br/>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
     <tr>
        <th>Name</th>
        <th>Body</th>
        <th> </th> 
        <th>Options</th> 
        <th> </th>        
    </tr>
  </thead>

<tbody>
    <% @articles.each do |article| %>
    <tr>
        <td><%= article.name%></td>
        <td><%= article.body%></td>
        <td><%= link_to "View", article, class: 'btn btn-primary' %></td>
        <td><%= link_to "Edit", edit_article_path(article), class: 'btn btn-dark' %></td>
        <td><%= button_to "Delete", delete_article_path(article), method: :delete, confirm: "Are you sure?", class: 'btn btn-danger' %></td>
    </tr>

    <% end %>
</tbody>
</table>


